<h3><%= @task.title %></h3>
<p><%= @task.details %></p>
<p>Completed : <%= @task.completed %></p>


<p><%= link_to "Edit the task", edit_task_path %></p>
<p><%= link_to "Delete the task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
<p><%= link_to "Back to all the tasks", tasks_path %></p>
